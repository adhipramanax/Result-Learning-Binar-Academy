<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- meta -->
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Panji Adhipramana" />

    <!-- title -->
    <title>Challenge 5</title>

    <!-- Font awasome -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css"
      integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/4c58b7f284.js"
      crossorigin="anonymous"
    ></script>

    <!-- jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- CSS boostrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- CSS Local -->
    <link rel="stylesheet" href="css/index.css" />
  </head>
  <body>
    <!-- modal -->
    <% if(success) { %>
    <div class="modal fade" id="modalBerhasil" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <%= message %>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  <!-- end modal -->
    
    <!-- <div> -->
    <div class="row left-nav">
      <!-- left navbar -->
      <div class="col-12">
        <div class="row">
          <div class="col-4 menu-nav">
            <div style="height: 70px; padding: 20px">
              <div class="icon-1">&nbsp;</div>
            </div>
            <div class="left-nav-icon">
              <button>
                <i class="fa-solid fa-house"></i>
                <p>Dashboard</p>
              </button>
              <button style="background-color: rgba(255, 255, 255, 0.432)">
                <i class="fa-solid fa-car"></i>
                <p>Menu Cars</p>
              </button>
            </div>
          </div>
          <div class="col-8 list-nav">
            <div style="height: 70px; padding: 20px">
              <div class="icon-1">&nbsp;</div>
            </div>
            <div class="list-nav-menu">
              <button>Cars</button>
              <a href="/">
                <button style="background-color: #cfd4ed">List Cars</button>
              </a>
            </div>
          </div>
        </div>
      </div>
      </div>
      <!-- end left navbar -->

      <div class="col-9 area-cars">
        <!-- top navbar -->
        <div class="col-9 nav-top asdfg ">
          <div class="nav-top-1">
            <img src="/images/ham-icon.png" alt="" />
          </div>
          <div class="nav-top" style="display: flex; flex-direction: row">
            <form class="d-flex">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
            <div class="icon-3"><h3>U</h3></div>
            <p>Unis Badri</p>
            <div class="nav-top-2">
              <img src="/images/Vector.png" alt="" />
            </div>
          </div>
        </div>
        <!-- end top navbar -->

        <!--header card cars -->
        <div class="area-card-cars">
          <div class="row row-card">
            <a style="color: black;" href="/"><strong>Cars</strong> >  List Cars</a>
            <div class="list-car">

                <h2>List Cars</h2>
              <a href="/create" class="btn-new-car">
                <button class="btn-new-car">
                  <i class="dsa fa-solid fa-plus"> Add New Car</i>
                </button>
              </a>
            </div>
            <div class="btn-filter">
              <a href="/">
                <button>All</button>
              </a>
              <a href="/?sort=1" >
                <button>Small</button>
              </a>
              <a href="/?sort=2" >
                <button>Medium</button>
              </a>
              <a href="/?sort=3" >
                <button>Large</button>
              </a>
            </div>

            <!-- card cars -->
            <% cars.forEach(car => { %>
              
              <div class="col-4 col-card">
                <div class="card-cars">
                  <div class="card-img-top">
                    <img
                      src="<%= car.url_image %>"
                      class="card-img-top"
                      alt="..."
                    />
                  </div>
                  <div class="card-body card-des">
                    <h3 class="car-title"><%= car.name %></h3>
                    <h4 class="car-price" style="font-weight: bold">Rp.<%= car.harga %>/Hari</h4>
                    <p>
                      <i class="fa-solid fa-clock-rotate-left"></i> Updated at 4
                      Apr 2022, 09.00
                    </p>
                    <br />
                    <!-- btn edit delete -->
                    <!-- Modal -->
                    <div
                      class="modal fade"
                      id="modalDelete<%= car.id %>"
                      aria-labelledby="exampleModalLabel"
                      aria-hidden="true"
                    >
                      <div class="modal-dialog">
                        <div class="modal-content modal-item">
                          <div class="modal-body d-flex isi-modal">
                            <img style="width: 250px" src="/images/img-BeepBeep.png" alt="mobil" />
                            <h2>Menghapus Data Mobil</h2>
                            <p>
                              Setelah dihapus, data mobil tidak dapat dikembalikan. Yakin ingin
                              menghapus?
                            </p>
                          </div>
                          <div class="modal-footer modal-fot">
                            <form action="/delete/<%= car.id %>" method="post">
                              <button type="submit" class="btn btn-primary btn-lg" >Ya</button>
                            </form>
                            <button
                              type="button"
                              class="btn btn-outline-primary btn-lg"
                              data-bs-dismiss="modal"
                            >
                              Tidak
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- end btn edit -->
                    <div class="btn-row row">
                      <div class="col-6">
                          <button
                            type="button"
                            class="btn btn-outline-danger btn-form btn-lg"
                            data-bs-toggle="modal"
                            data-bs-target="#modalDelete<%= car.id %>"
                          >
                            <i class="fa-solid fa-trash"></i>
                            Delete
                          </button>
                      </div>
                      <!-- <div class="col-6">
                        <form action="/delete/<%= car.id %>" method="post">
                          <button
                            type="submit"
                            class="btn btn-outline-danger btn-form btn-lg"
                          >
                            <i class="fa-solid fa-trash"></i>
                            Delete
                          </button>
                        </form>
                      </div> -->
                      <div class="col-6">

                        <a href="/update/<%= car.id %>">
                          <button type="button" class="btn btn-green btn-form btn-lg">
                            <i class="fa-solid fa-pen-to-square"></i>
                            Edit
                          </button>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
            <!-- end card cars -->
          </div>
          <!-- </div> -->
        </div>
      </div>
    </div>
    <!-- end card cars -->
    <!-- javascript -->
    <% if(success) { %>
    <script>
      $(document).ready(function () {
        $("#modalBerhasil").modal("show");
      });
    </script>
    <% } %>
    <!-- javascript boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
